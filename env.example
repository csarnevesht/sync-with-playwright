# Dropbox Configuration
# The root folder in Dropbox containing account folders
DROPBOX_FOLDER=Wealth Management

# Salesforce Configuration
# The URL of your Salesforce CRM instance
SALESFORCE_URL=https://capitalprotect.lightning.force.com

# File Pattern Configuration
# Pattern for account information files (PDF)
ACCOUNT_INFO_PATTERN=*App.pdf

# Pattern for driver's license files (JPEG)
DRIVERS_LICENSE_PATTERN=*DL.jpeg

# Upload Configuration
# Maximum time to wait for file upload in seconds (default: 300)
UPLOAD_TIMEOUT=300

# Browser Configuration
# Chrome debugging port (default: 9222)
CHROME_DEBUG_PORT=9222

# Logging Configuration
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Debug Configuration
# Enable debug mode with interactive prompts (true/false)
DEBUG_MODE=false

# Test Configuration
# Enable test mode to use mock data instead of Dropbox (true/false)
TEST_MODE=false

# Temporary Directory Configuration
# Base directory for temporary files (default: system temp)
TEMP_DIR=/tmp/sync-files

# Retry Configuration
# Number of retries for failed uploads (default: 3)
MAX_RETRIES=3

# Batch Processing Configuration
# Maximum number of files to upload in a single batch (default: 10)
MAX_BATCH_SIZE=10 